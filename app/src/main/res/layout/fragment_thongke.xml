<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỐNG KÊ "
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:textSize="48sp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:cardBackgroundColor="#E8D3E3"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Tiền Thu"
                android:textSize="24sp"
                android:textColor="#000"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvTongTienThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000000000000"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#E8D3E3"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền Chi"
            android:textSize="24sp"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvTongTienChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000000000000"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#E8D3E3"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền Tiết Kiệm"
            android:textSize="24sp"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvTongTienTietKiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000000000000"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>